<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_item_card"
    android:layout_height="@dimen/saved_item_card_height"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/saved_article_image"
            android:layout_width="@dimen/saved_item_card_height"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/saved_article_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/saved_item_text_padding"
                android:layout_marginTop="@dimen/saved_item_text_padding"
                android:textColor="#000000"
                android:textSize="@dimen/saved_item_text_size"
                android:text="placeholder" />
            <Button
                android:id="@+id/saved_article_button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/remove_saved_item_button_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/remove_saved_item_button"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>